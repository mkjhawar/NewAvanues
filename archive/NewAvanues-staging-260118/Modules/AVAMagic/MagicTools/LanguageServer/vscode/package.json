{
  "name": "magicui-lsp",
  "displayName": "MagicUI Language Support",
  "description": "Language Server for MagicUI DSL files (.magic.yaml, .magic.json, .magicui)",
  "version": "1.0.0",
  "publisher": "augmentalis",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "magicui-yaml",
        "aliases": ["MagicUI YAML", "magicui"],
        "extensions": [".magic.yaml", ".magicui"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "magicui-json",
        "aliases": ["MagicUI JSON"],
        "extensions": [".magic.json"],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MagicUI Language Server",
      "properties": {
        "magicui.server.jarPath": {
          "type": "string",
          "default": "",
          "description": "Path to MagicUI Language Server JAR file"
        },
        "magicui.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  }
}
