{
  "name": "ProductCard",
  "description": "Reusable product card component for e-commerce",
  "type": "CARD",
  "properties": {
    "elevated": true,
    "variant": "DEFAULT"
  },
  "children": [
    {
      "id": "productColumn",
      "type": "COLUMN",
      "properties": {
        "spacing": 12
      },
      "children": [
        {
          "id": "productImage",
          "type": "IMAGE",
          "properties": {
            "source": "${product.imageUrl}",
            "alt": "${product.name}",
            "width": null,
            "height": 200,
            "fit": "COVER"
          }
        },
        {
          "id": "contentColumn",
          "type": "COLUMN",
          "properties": {
            "spacing": 8
          },
          "children": [
            {
              "id": "titleRow",
              "type": "ROW",
              "properties": {
                "horizontalAlignment": "SPACE_BETWEEN",
                "verticalAlignment": "CENTER"
              },
              "children": [
                {
                  "id": "productName",
                  "type": "TEXT",
                  "properties": {
                    "content": "${product.name}",
                    "variant": "H3",
                    "bold": true,
                    "maxLines": 2
                  }
                },
                {
                  "id": "favoriteButton",
                  "type": "ICON",
                  "properties": {
                    "name": "${product.isFavorite ? 'favorite' : 'favorite_border'}",
                    "size": "MEDIUM",
                    "color": "#E91E63"
                  }
                }
              ]
            },
            {
              "id": "categoryChip",
              "type": "CHIP",
              "properties": {
                "label": "${product.category}",
                "variant": "OUTLINED",
                "icon": "category"
              }
            },
            {
              "id": "description",
              "type": "TEXT",
              "properties": {
                "content": "${product.description}",
                "variant": "BODY2",
                "color": "#666666",
                "maxLines": 3
              }
            },
            {
              "id": "ratingRow",
              "type": "ROW",
              "properties": {
                "spacing": 8,
                "verticalAlignment": "CENTER"
              },
              "children": [
                {
                  "id": "rating",
                  "type": "RATING",
                  "properties": {
                    "value": "${product.rating}",
                    "maxRating": 5,
                    "readOnly": true
                  }
                },
                {
                  "id": "reviewCount",
                  "type": "TEXT",
                  "properties": {
                    "content": "(${product.reviewCount} reviews)",
                    "variant": "CAPTION",
                    "color": "#999999"
                  }
                }
              ]
            },
            {
              "id": "priceRow",
              "type": "ROW",
              "properties": {
                "horizontalAlignment": "SPACE_BETWEEN",
                "verticalAlignment": "CENTER"
              },
              "children": [
                {
                  "id": "priceColumn",
                  "type": "COLUMN",
                  "properties": {
                    "spacing": 4
                  },
                  "children": [
                    {
                      "id": "price",
                      "type": "TEXT",
                      "properties": {
                        "content": "$${product.price}",
                        "variant": "H2",
                        "bold": true,
                        "color": "#2196F3"
                      }
                    },
                    {
                      "id": "originalPrice",
                      "type": "TEXT",
                      "properties": {
                        "content": "$${product.originalPrice}",
                        "variant": "BODY2",
                        "color": "#999999",
                        "underline": true
                      }
                    }
                  ]
                },
                {
                  "id": "addToCartButton",
                  "type": "BUTTON",
                  "properties": {
                    "text": "Add to Cart",
                    "variant": "PRIMARY",
                    "size": "MEDIUM",
                    "icon": "shopping_cart",
                    "iconPosition": "START"
                  },
                  "events": {
                    "onClick": "{ onAddToCart(product.id) }"
                  }
                }
              ]
            },
            {
              "id": "stockBadge",
              "type": "BADGE",
              "properties": {
                "content": "${product.stock} in stock",
                "color": "${product.stock > 10 ? 'success' : 'warning'}"
              }
            }
          ]
        }
      ]
    }
  ]
}
