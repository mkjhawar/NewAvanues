{
  "name": "LoginScreen",
  "imports": [
    "androidx.compose.material.icons.Icons",
    "androidx.compose.material.icons.filled.*"
  ],
  "state": [
    {
      "name": "email",
      "type": "String",
      "initialValue": "",
      "mutable": true
    },
    {
      "name": "password",
      "type": "String",
      "initialValue": "",
      "mutable": true
    },
    {
      "name": "rememberMe",
      "type": "Boolean",
      "initialValue": false,
      "mutable": true
    },
    {
      "name": "isLoading",
      "type": "Boolean",
      "initialValue": false,
      "mutable": true
    }
  ],
  "root": {
    "id": "root",
    "type": "CONTAINER",
    "properties": {
      "padding": 24,
      "centered": true,
      "maxWidth": 400
    },
    "children": [
      {
        "id": "mainColumn",
        "type": "COLUMN",
        "properties": {
          "spacing": 16,
          "horizontalAlignment": "CENTER"
        },
        "children": [
          {
            "id": "logo",
            "type": "IMAGE",
            "properties": {
              "source": "assets/logo.png",
              "alt": "VoiceOS Logo",
              "width": 120,
              "height": 120,
              "fit": "CONTAIN"
            }
          },
          {
            "id": "title",
            "type": "TEXT",
            "properties": {
              "content": "Welcome Back",
              "variant": "H1",
              "align": "CENTER",
              "bold": true
            }
          },
          {
            "id": "subtitle",
            "type": "TEXT",
            "properties": {
              "content": "Sign in to continue",
              "variant": "BODY2",
              "align": "CENTER",
              "color": "#666666"
            }
          },
          {
            "id": "spacer1",
            "type": "SPACER",
            "properties": {
              "size": 24,
              "direction": "vertical"
            }
          },
          {
            "id": "emailField",
            "type": "TEXT_FIELD",
            "properties": {
              "value": "email",
              "label": "Email",
              "placeholder": "your@email.com",
              "type": "EMAIL",
              "leadingIcon": "email",
              "enabled": true
            },
            "events": {
              "onValueChange": "{ email = it }"
            }
          },
          {
            "id": "passwordField",
            "type": "TEXT_FIELD",
            "properties": {
              "value": "password",
              "label": "Password",
              "placeholder": "Enter password",
              "type": "PASSWORD",
              "leadingIcon": "lock",
              "enabled": true
            },
            "events": {
              "onValueChange": "{ password = it }"
            }
          },
          {
            "id": "rememberRow",
            "type": "ROW",
            "properties": {
              "horizontalAlignment": "SPACE_BETWEEN",
              "verticalAlignment": "CENTER"
            },
            "children": [
              {
                "id": "rememberCheckbox",
                "type": "CHECKBOX",
                "properties": {
                  "checked": "rememberMe",
                  "label": "Remember me"
                },
                "events": {
                  "onCheckedChange": "{ rememberMe = it }"
                }
              },
              {
                "id": "forgotLink",
                "type": "TEXT",
                "properties": {
                  "content": "Forgot password?",
                  "variant": "BODY2",
                  "color": "#2196F3"
                },
                "events": {
                  "onClick": "{ /* Navigate to forgot password */ }"
                }
              }
            ]
          },
          {
            "id": "spacer2",
            "type": "SPACER",
            "properties": {
              "size": 16,
              "direction": "vertical"
            }
          },
          {
            "id": "loginButton",
            "type": "BUTTON",
            "properties": {
              "text": "Sign In",
              "variant": "PRIMARY",
              "size": "LARGE",
              "fullWidth": true,
              "enabled": "!isLoading"
            },
            "events": {
              "onClick": "{ /* Handle login */ }"
            }
          },
          {
            "id": "divider",
            "type": "DIVIDER",
            "properties": {
              "orientation": "HORIZONTAL",
              "thickness": 1
            }
          },
          {
            "id": "signupRow",
            "type": "ROW",
            "properties": {
              "horizontalAlignment": "CENTER",
              "spacing": 4
            },
            "children": [
              {
                "id": "signupPrompt",
                "type": "TEXT",
                "properties": {
                  "content": "Don't have an account?",
                  "variant": "BODY2"
                }
              },
              {
                "id": "signupLink",
                "type": "TEXT",
                "properties": {
                  "content": "Sign up",
                  "variant": "BODY2",
                  "color": "#2196F3",
                  "bold": true
                },
                "events": {
                  "onClick": "{ /* Navigate to signup */ }"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}
