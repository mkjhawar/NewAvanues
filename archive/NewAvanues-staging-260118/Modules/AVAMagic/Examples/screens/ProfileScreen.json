{
  "name": "ProfileScreen",
  "state": [
    {
      "name": "userName",
      "type": "String",
      "initialValue": "John Doe",
      "mutable": false
    },
    {
      "name": "userEmail",
      "type": "String",
      "initialValue": "john@example.com",
      "mutable": false
    },
    {
      "name": "notificationsEnabled",
      "type": "Boolean",
      "initialValue": true,
      "mutable": true
    },
    {
      "name": "darkModeEnabled",
      "type": "Boolean",
      "initialValue": false,
      "mutable": true
    }
  ],
  "root": {
    "id": "root",
    "type": "COLUMN",
    "properties": {
      "spacing": 0
    },
    "children": [
      {
        "id": "appBar",
        "type": "APP_BAR",
        "properties": {
          "title": "Profile"
        }
      },
      {
        "id": "profileCard",
        "type": "CARD",
        "properties": {
          "elevated": true,
          "variant": "DEFAULT"
        },
        "children": [
          {
            "id": "profileColumn",
            "type": "COLUMN",
            "properties": {
              "spacing": 16,
              "horizontalAlignment": "CENTER"
            },
            "children": [
              {
                "id": "avatar",
                "type": "IMAGE",
                "properties": {
                  "source": "assets/avatar.png",
                  "alt": "Profile Picture",
                  "width": 100,
                  "height": 100,
                  "fit": "COVER"
                }
              },
              {
                "id": "name",
                "type": "TEXT",
                "properties": {
                  "content": "userName",
                  "variant": "H2",
                  "bold": true
                }
              },
              {
                "id": "email",
                "type": "TEXT",
                "properties": {
                  "content": "userEmail",
                  "variant": "BODY2",
                  "color": "#666666"
                }
              },
              {
                "id": "editButton",
                "type": "BUTTON",
                "properties": {
                  "text": "Edit Profile",
                  "variant": "OUTLINED",
                  "size": "MEDIUM",
                  "icon": "edit"
                },
                "events": {
                  "onClick": "{ /* Navigate to edit profile */ }"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "settingsCard",
        "type": "CARD",
        "properties": {
          "elevated": false,
          "variant": "OUTLINED"
        },
        "children": [
          {
            "id": "settingsColumn",
            "type": "COLUMN",
            "properties": {
              "spacing": 0
            },
            "children": [
              {
                "id": "settingsTitle",
                "type": "TEXT",
                "properties": {
                  "content": "Settings",
                  "variant": "H3",
                  "bold": true
                }
              },
              {
                "id": "notificationsItem",
                "type": "LIST_ITEM",
                "properties": {
                  "title": "Notifications",
                  "subtitle": "Enable push notifications",
                  "leadingIcon": "notifications",
                  "showDivider": true
                },
                "children": [
                  {
                    "id": "notificationsSwitch",
                    "type": "SWITCH",
                    "properties": {
                      "isOn": "notificationsEnabled"
                    },
                    "events": {
                      "onChange": "{ notificationsEnabled = it }"
                    }
                  }
                ]
              },
              {
                "id": "darkModeItem",
                "type": "LIST_ITEM",
                "properties": {
                  "title": "Dark Mode",
                  "subtitle": "Use dark theme",
                  "leadingIcon": "dark_mode",
                  "showDivider": true
                },
                "children": [
                  {
                    "id": "darkModeSwitch",
                    "type": "SWITCH",
                    "properties": {
                      "isOn": "darkModeEnabled"
                    },
                    "events": {
                      "onChange": "{ darkModeEnabled = it }"
                    }
                  }
                ]
              },
              {
                "id": "languageItem",
                "type": "LIST_ITEM",
                "properties": {
                  "title": "Language",
                  "subtitle": "English",
                  "leadingIcon": "language",
                  "trailingIcon": "chevron_right",
                  "showDivider": true
                },
                "events": {
                  "onClick": "{ /* Navigate to language settings */ }"
                }
              },
              {
                "id": "privacyItem",
                "type": "LIST_ITEM",
                "properties": {
                  "title": "Privacy",
                  "subtitle": "Manage your privacy settings",
                  "leadingIcon": "privacy_tip",
                  "trailingIcon": "chevron_right",
                  "showDivider": false
                },
                "events": {
                  "onClick": "{ /* Navigate to privacy settings */ }"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "logoutButton",
        "type": "BUTTON",
        "properties": {
          "text": "Log Out",
          "variant": "TEXT",
          "size": "LARGE",
          "fullWidth": true
        },
        "events": {
          "onClick": "{ /* Handle logout */ }"
        }
      }
    ]
  }
}
