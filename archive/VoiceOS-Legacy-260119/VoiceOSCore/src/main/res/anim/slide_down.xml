<?xml version="1.0" encoding="utf-8"?>
<!--
  slide_down.xml - Slide down animation for command bar
  Path: modules/apps/VoiceOSCore/src/main/res/anim/slide_down.xml

  Material Motion compliant slide down animation.
  Used when hiding the command bar to bottom of screen.

  Duration: 200ms
  Interpolator: Accelerate (easing in)

  Author: VOS4 Development Team
  Created: 2025-12-06
-->
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="200"
    android:interpolator="@android:anim/accelerate_interpolator">

    <!-- Slide from current position to below screen -->
    <translate
        android:fromYDelta="0%p"
        android:toYDelta="100%p" />

    <!-- Fade out for smooth disappearance -->
    <alpha
        android:fromAlpha="1.0"
        android:toAlpha="0.0" />

</set>
