<?xml version="1.0" encoding="utf-8"?>
<!--
  fade_in.xml - Fade in animation for dialogs
  Path: modules/apps/LearnApp/src/main/res/anim/fade_in.xml

  Author: Manoj Jhawar
  Created: 2025-10-24

  Simple 200ms fade in animation for dialog entrance.
  Conservative duration to meet <100ms display budget.
-->
<alpha xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="200"
    android:fromAlpha="0.0"
    android:toAlpha="1.0"
    android:interpolator="@android:interpolator/decelerate_cubic" />
