<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_learnapp_settings.xml - LearnApp settings screen layout

    Author: Manoj Jhawar
    Code-Reviewed-By: CCA
    Created: 2025-11-28

    Material Design 3 layout for LearnApp settings.
    Allows user to toggle learning mode between AUTO_DETECT and MANUAL.
-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LearnApp Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configure how VoiceOS learns new apps"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:paddingBottom="24dp" />

        <!-- Learning Mode Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Learning Mode"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:paddingBottom="8dp" />

                <RadioGroup
                    android:id="@+id/radio_group_learning_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Auto-Detect Mode -->
                    <RadioButton
                        android:id="@+id/radio_auto_detect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Auto-Detect (Recommended)"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Automatically shows consent dialog when new apps are detected"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:paddingStart="32dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="16dp" />

                    <!-- Manual Mode -->
                    <RadioButton
                        android:id="@+id/radio_manual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manual"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You manually choose which apps to learn from settings"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:paddingStart="32dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="8dp" />

                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#10FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ About Learning Modes"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Auto-Detect: VoiceOS shows a dialog when you open a new app\n• Manual: You control when learning happens\n• Just-in-Time: Click 'Skip' on dialog to learn passively as you use the app"
                    android:textSize="13sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:lineSpacingMultiplier="1.3" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</ScrollView>
