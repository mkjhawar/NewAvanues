<?xml version="1.0" encoding="utf-8"?>
<!--
    layout_login_prompt.xml - Material Design 3 login prompt overlay layout
    Path: modules/apps/LearnApp/src/main/res/layout/layout_login_prompt.xml

    Author: Manoj Jhawar
    Code-Reviewed-By: CCA
    Created: 2025-10-24

    XML layout for login prompt overlay when LearnApp encounters login screens.
    Uses Material Components for consistent Material Design 3 styling.
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?android:attr/colorBackground">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Detected"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center"
        android:contentDescription="Login screen detected during app exploration" />

    <!-- App Name -->
    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:contentDescription="App name being explored" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/textColorSecondary"
        android:alpha="0.2" />

    <!-- Message -->
    <TextView
        android:id="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:contentDescription="Login screen guidance message" />

    <!-- Guidance -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="LearnApp is exploring this app to generate voice commands. Login screens are typically skipped during exploration."
        android:textSize="13sp"
        android:textColor="?android:attr/textColorTertiary"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2" />

    <!-- Voice Commands Hints Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/voice_hints_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#10FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voice Commands:"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="• &quot;Skip login&quot; - Skip this screen"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• &quot;Continue&quot; - Proceed with exploration"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• &quot;Dismiss&quot; - Cancel exploration"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Skip Button -->
        <Button
            android:id="@+id/btn_skip"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skip Login"
            android:textSize="14sp"
            android:contentDescription="Skip this login screen" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/btn_continue"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Continue"
            android:textSize="14sp"
            android:contentDescription="Continue with exploration" />
    </LinearLayout>

    <!-- Dismiss Button -->
    <Button
        android:id="@+id/btn_dismiss"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dismiss"
        android:textSize="13sp"
        android:contentDescription="Dismiss and cancel exploration" />
</LinearLayout>
