# Avanues iOS - CocoaPods Configuration
# Consumes the AvanuesShared KMP umbrella framework

platform :ios, '16.0'
use_frameworks!
inhibit_all_warnings!

# KMP Shared Framework path (generated by kotlin-cocoapods plugin)
# Run `./gradlew :Modules:AvanuesShared:podspec -Pkotlin.mpp.enableNativeTargets=true`
# from the repo root to generate AvanuesShared.podspec

target 'Avanues' do
  pod 'AvanuesShared', :path => '../../../Modules/AvanuesShared'
end

target 'AvanuesTests' do
  inherit! :search_paths
  pod 'AvanuesShared', :path => '../../../Modules/AvanuesShared'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      # Disable bitcode (deprecated since Xcode 14)
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end
