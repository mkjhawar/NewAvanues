{
  "statusLine": {
    "type": "command",
    "command": "sh /Volumes/M-Drive/Coding/.claude/statusline-command.sh"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "/Volumes/M-Drive/Coding/.claude/hooks/session-start.sh"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "/Volumes/M-Drive/Coding/.claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/Volumes/M-Drive/Coding/.claude/hooks/post-write.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/pre-compact.sh"
          }
        ]
      },
      {
        "matcher": "manual",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/pre-compact.sh"
          }
        ]
      }
    ]
  }
}
