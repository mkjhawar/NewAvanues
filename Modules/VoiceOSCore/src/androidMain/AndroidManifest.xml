<?xml version="1.0" encoding="utf-8"?>
<!--
 * AndroidManifest.xml - VoiceOSCore Module Manifest
 *
 * Declares permissions and services for the unified VoiceOSCore module.
 * This is a library module - services are registered but not started automatically.
 *
 * Copyright (C) Manoj Jhawar/Aman Jhawar, Intelligent Devices LLC
 -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ==================== PERMISSIONS ==================== -->

    <!-- Audio recording for voice commands -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Network for cloud services (Azure, etc.) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Storage for model files (Vivoka, Vosk, etc.) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />

    <!-- Foreground service for voice recognition -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />

    <!-- Wake lock for continuous listening -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Vibration for feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Overlay permission for floating UI -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Boot receiver for auto-start -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- ==================== APPLICATION COMPONENTS ==================== -->

    <application>

        <!-- VoiceOS Accessibility Service -->
        <!-- Note: Service class will be in com.augmentalis.voiceoscore.service -->
        <service
            android:name="com.augmentalis.voiceoscore.service.VoiceOSService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- Metadata for library identification -->
        <meta-data
            android:name="com.augmentalis.voiceoscore.version"
            android:value="1.0.0" />

    </application>

</manifest>
