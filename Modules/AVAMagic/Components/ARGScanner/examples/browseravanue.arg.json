{
  "version": "1.0",
  "app": {
    "id": "com.augmentalis.avanue.browser",
    "name": "BrowserAvanue",
    "version": "1.0.0",
    "description": "Voice-controlled web browser for VoiceOS ecosystem",
    "packageName": "com.augmentalis.avanue.browser",
    "icon": "drawable/ic_browser",
    "category": "PRODUCTIVITY"
  },
  "capabilities": [
    {
      "id": "capability.browse_web",
      "name": "Browse Web",
      "description": "Open and navigate web pages with voice commands",
      "type": "ACTION",
      "voiceCommands": [
        "open {url}",
        "browse to {url}",
        "go to {url}",
        "navigate to {url}",
        "visit {url}"
      ],
      "params": [
        {
          "name": "url",
          "type": "URL",
          "required": true,
          "description": "Web URL to open"
        }
      ],
      "requiresPermissions": [
        "android.permission.INTERNET"
      ]
    },
    {
      "id": "capability.search_web",
      "name": "Search Web",
      "description": "Perform web search using default search engine",
      "type": "ACTION",
      "voiceCommands": [
        "search for {query}",
        "search {query}",
        "find {query}",
        "look up {query}"
      ],
      "params": [
        {
          "name": "query",
          "type": "STRING",
          "required": true,
          "description": "Search query"
        }
      ],
      "requiresPermissions": [
        "android.permission.INTERNET"
      ]
    },
    {
      "id": "capability.bookmark_page",
      "name": "Bookmark Page",
      "description": "Save current page to bookmarks",
      "type": "ACTION",
      "voiceCommands": [
        "bookmark this page",
        "save this page",
        "add bookmark",
        "save to bookmarks"
      ],
      "params": [],
      "requiresPermissions": []
    },
    {
      "id": "capability.read_page",
      "name": "Read Page Aloud",
      "description": "Read current web page using text-to-speech",
      "type": "ACTION",
      "voiceCommands": [
        "read this page",
        "read page aloud",
        "read content"
      ],
      "params": [],
      "requiresPermissions": []
    },
    {
      "id": "capability.get_page_title",
      "name": "Get Page Title",
      "description": "Get the title of the current page",
      "type": "QUERY",
      "voiceCommands": [
        "what is the page title",
        "get page title",
        "current page title"
      ],
      "params": [],
      "requiresPermissions": []
    }
  ],
  "intentFilters": [
    {
      "action": "android.intent.action.VIEW",
      "categories": [
        "android.intent.category.DEFAULT",
        "android.intent.category.BROWSABLE"
      ],
      "dataSchemes": [
        "http",
        "https"
      ],
      "dataMimeTypes": [
        "text/html"
      ],
      "priority": 100
    },
    {
      "action": "android.intent.action.WEB_SEARCH",
      "categories": [
        "android.intent.category.DEFAULT"
      ],
      "dataSchemes": [],
      "dataMimeTypes": [],
      "priority": 100
    }
  ],
  "services": [
    {
      "id": "service.browser_control",
      "name": "Browser Control Service",
      "description": "AIDL service for controlling browser from other apps",
      "aidlInterface": "com.augmentalis.avanue.browser.IBrowserService",
      "methods": [
        {
          "name": "openUrl",
          "description": "Open a URL in the browser",
          "params": [
            {
              "name": "url",
              "type": "String",
              "description": "URL to open"
            }
          ],
          "returnType": "boolean"
        },
        {
          "name": "searchWeb",
          "description": "Perform web search",
          "params": [
            {
              "name": "query",
              "type": "String",
              "description": "Search query"
            }
          ],
          "returnType": "boolean"
        },
        {
          "name": "getCurrentUrl",
          "description": "Get current page URL",
          "params": [],
          "returnType": "String"
        },
        {
          "name": "getCurrentTitle",
          "description": "Get current page title",
          "params": [],
          "returnType": "String"
        },
        {
          "name": "goBack",
          "description": "Navigate back in history",
          "params": [],
          "returnType": "boolean"
        },
        {
          "name": "goForward",
          "description": "Navigate forward in history",
          "params": [],
          "returnType": "boolean"
        },
        {
          "name": "reload",
          "description": "Reload current page",
          "params": [],
          "returnType": "boolean"
        }
      ],
      "requiresPermission": null
    }
  ],
  "contentProviders": [
    {
      "id": "provider.bookmarks",
      "name": "Bookmarks Provider",
      "description": "Access browser bookmarks",
      "authority": "com.augmentalis.avanue.browser.provider.bookmarks",
      "paths": [
        {
          "path": "/bookmarks",
          "type": "COLLECTION",
          "description": "List all bookmarks"
        },
        {
          "path": "/bookmarks/#",
          "type": "ITEM",
          "description": "Get specific bookmark by ID"
        },
        {
          "path": "/bookmarks/search",
          "type": "QUERY",
          "description": "Search bookmarks by title or URL"
        }
      ],
      "mimeTypes": [
        "vnd.android.cursor.dir/vnd.augmentalis.bookmark",
        "vnd.android.cursor.item/vnd.augmentalis.bookmark"
      ],
      "requiresPermission": null
    },
    {
      "id": "provider.history",
      "name": "History Provider",
      "description": "Access browser history",
      "authority": "com.augmentalis.avanue.browser.provider.history",
      "paths": [
        {
          "path": "/history",
          "type": "COLLECTION",
          "description": "List browsing history"
        },
        {
          "path": "/history/recent",
          "type": "COLLECTION",
          "description": "Get recent history (last 24 hours)"
        }
      ],
      "mimeTypes": [
        "vnd.android.cursor.dir/vnd.augmentalis.history"
      ],
      "requiresPermission": null
    }
  ]
}
