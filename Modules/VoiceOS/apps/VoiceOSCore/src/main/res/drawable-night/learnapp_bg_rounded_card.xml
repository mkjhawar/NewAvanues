<?xml version="1.0" encoding="utf-8"?>
<!--
  bg_rounded_card.xml (night) - Rounded card background drawable for dark mode
  Path: modules/apps/LearnApp/src/main/res/drawable-night/bg_rounded_card.xml

  Author: Manoj Jhawar
  Created: 2025-10-24

  Material Design 3 styled card background for dark mode with rounded corners.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Card background color (Material Design dark surface) -->
    <solid android:color="#1E1E1E" />

    <!-- Rounded corners (8dp) -->
    <corners android:radius="8dp" />

    <!-- Subtle stroke for definition in dark mode -->
    <stroke
        android:width="1dp"
        android:color="#333333" />

</shape>
