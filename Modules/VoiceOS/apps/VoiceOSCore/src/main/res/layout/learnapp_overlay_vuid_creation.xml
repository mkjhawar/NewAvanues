<?xml version="1.0" encoding="utf-8"?>
<!--
  learnapp_overlay_vuid_creation.xml - VUID creation metrics debug overlay
  Path: VoiceOSCore/src/main/res/layout/learnapp_overlay_vuid_creation.xml

  Real-time VUID creation monitoring overlay.
  Shows detection/creation stats during exploration.

  Feature: LearnApp VUID Creation Fix - Phase 3 (Observability)
  Created: 2025-12-08
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#DD000000"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:contentDescription="VUID creation metrics overlay">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:minWidth="240dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VUID Creation Monitor"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#33FFFFFF" />

        <!-- App Name -->
        <TextView
            android:id="@+id/txt_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App: Loading..."
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <!-- Elements Detected -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detected:"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_detected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#4CAF50"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- VUIDs Created -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Created:"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#2196F3"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Creation Rate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rate:"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="#FFC107"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Status Icon -->
        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:text="â³"
            android:textSize="24sp"
            android:contentDescription="Status indicator" />

        <!-- Filtered Count (expandable details) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Filtered:"
                android:textColor="#CCCCCC"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_filtered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#CCCCCC"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Top Filtered Type -->
        <TextView
            android:id="@+id/txt_top_filtered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="#999999"
            android:textSize="11sp"
            android:visibility="gone" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/txt_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="end"
            android:text="Updated: --:--"
            android:textColor="#666666"
            android:textSize="10sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
