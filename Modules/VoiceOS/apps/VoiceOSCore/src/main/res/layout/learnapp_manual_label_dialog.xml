<?xml version="1.0" encoding="utf-8"?>
<!-- Manual Label Dialog for renaming elements -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/background_dark">

    <!-- Title -->
    <TextView
        android:id="@+id/text_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rename Element"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/text_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a custom voice command for this element."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />

    <!-- Quick Select Label (can be hidden) -->
    <TextView
        android:id="@+id/text_quick_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quick Select:"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone" />

    <!-- Chip Group for Suggestions (can be hidden) -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_suggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:singleSelection="true" />

    <!-- Element Preview -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/darker_gray"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/text_preview_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/text_preview_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current label: Submit"
            android:textSize="12sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/text_preview_bounds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Position: (100, 200)"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Voice command"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@android:color/white"
        app:hintTextColor="@android:color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@android:color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            style="@style/Widget.MaterialComponents.Button" />
    </LinearLayout>
</LinearLayout>
