<?xml version="1.0" encoding="utf-8"?>
<!--
  insufficient_metadata_notification.xml - Notification overlay layout
  Path: modules/apps/LearnApp/src/main/res/layout/insufficient_metadata_notification.xml

  Author: Manoj Jhawar
  Created: 2025-10-13

  Layout for insufficient metadata notification overlay
-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:backgroundTint="@color/notification_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <!-- Warning Icon -->
            <ImageView
                android:id="@+id/icon_warning"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_warning"
                android:contentDescription="@string/warning_icon"
                app:tint="@color/warning_color" />

            <!-- Title -->
            <TextView
                android:id="@+id/text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="@string/insufficient_metadata_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <!-- Close Button -->
            <ImageButton
                android:id="@+id/button_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:contentDescription="@string/close_button"
                app:tint="@color/text_secondary" />
        </LinearLayout>

        <!-- Message Section -->
        <TextView
            android:id="@+id/text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/insufficient_metadata_message"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp" />

        <!-- Element Info Section -->
        <LinearLayout
            android:id="@+id/layout_element_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_element_info"
            android:padding="12dp">

            <TextView
                android:id="@+id/text_element_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/text_element_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Suggestions Section -->
        <TextView
            android:id="@+id/text_suggestions_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/suggested_labels"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_suggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!-- Action Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Skip All Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_skip_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skip_all"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="@color/text_secondary" />

            <!-- Skip Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/skip"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Provide Label Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_provide_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/provide_label"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button" />
        </LinearLayout>

        <!-- Queue Info -->
        <TextView
            android:id="@+id/text_queue_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"
            android:gravity="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
