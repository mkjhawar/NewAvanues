<?xml version="1.0" encoding="utf-8"?>
<!--
    styles.xml - LearnApp Typography and Shape Styles

    Author: Manoj Jhawar
    Created: 2025-12-18

    Defines TextAppearance and ShapeAppearance styles referenced by themes.
-->
<resources>
    <!-- Typography Styles -->
    <style name="TextAppearance.LearnApp.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.LearnApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="TextAppearance.LearnApp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.LearnApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.LearnApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Theme.LearnApp.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!-- Dialog Animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>
