<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/cursor_primary</item>
        <item name="colorPrimaryVariant">@color/cursor_accent</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/cursor_secondary</item>
        <item name="colorSecondaryVariant">@color/cursor_accent</item>
        <item name="colorOnSecondary">@android:color/black</item>
    </style>
    
    <!-- Settings Activity Theme -->
    <style name="AppTheme.Settings" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/cursor_primary</item>
        <item name="colorPrimaryVariant">@color/cursor_accent</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/cursor_secondary</item>
        <item name="colorSecondaryVariant">@color/cursor_accent</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:windowBackground">@color/settings_background</item>
    </style>
    
    <!-- Dialog Theme for Permission Activity -->
    <style name="Theme.AppCompat.Dialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>