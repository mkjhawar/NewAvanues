<?xml version="1.0" encoding="utf-8"?>
<!--
  LearnAppDev - Developer Edition App Exploration Tool

  Developer edition with additional debugging features:
  - Neo4j graph visualization
  - Full exploration logs
  - Unencrypted AVU export
  - Element inspection tools

  Author: Manoj Jhawar
  Created: 2025-12-11 (LearnApp Dual-Edition)
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions for app exploration -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />

    <!-- Developer permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnAppDev"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <!--
          LearnAppDev Main Activity

          Developer edition launcher with:
          - Neo4j graph visualization panel
          - Full exploration logs
          - Element tree inspector
          - AVU file preview
        -->
        <activity
            android:name=".LearnAppDevActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnAppDev">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
          Element Inspector Activity

          Full-screen element tree visualization
          and property inspector.
        -->
        <activity
            android:name=".inspector.ElementInspectorActivity"
            android:exported="false"
            android:theme="@style/Theme.LearnAppDev" />

        <!--
          Neo4j Graph Activity

          Graph visualization of app navigation
          and element relationships.
        -->
        <activity
            android:name=".neo4j.GraphViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.LearnAppDev" />

    </application>

</manifest>
