{
  "name": "VOS3 UIBlocks",
  "version": "1.0.0",
  "author": "Manoj Jhawar",
  "codeReviewedBy": "CCA",
  "description": "Modular UI component library for VOS3 with hot-reload support",
  
  "config": {
    "hotReload": true,
    "cacheEnabled": true,
    "compressionEnabled": false,
    "encryptionEnabled": false
  },
  
  "themes": {
    "default": "arvision",
    "available": ["arvision", "material", "custom"],
    "allowRuntimeSwitch": true
  },
  
  "components": {
    "base": [
      "SpatialButton",
      "SpatialCard", 
      "SpatialTextField",
      "SpatialSwitch",
      "SpatialSlider"
    ],
    "containers": [
      "SpatialBottomSheet",
      "SpatialDialog",
      "SpatialDrawer",
      "SpatialPopover"
    ],
    "voice": [
      "VoiceIndicator",
      "VoiceButton",
      "VoiceCommandHint",
      "VoiceFeedback"
    ],
    "spatial": [
      "GlassMorphismCard",
      "BlurredBackground",
      "DepthLayer",
      "ParallaxContainer"
    ]
  },
  
  "assets": {
    "icons": "assets/icons/",
    "fonts": "assets/fonts/",
    "animations": "assets/animations/"
  },
  
  "export": {
    "formats": ["compose", "xml", "json"],
    "platforms": ["android", "ios", "web"]
  },
  
  "licensing": {
    "required": true,
    "validationEndpoint": "https://api.augmentalis.com/license/validate",
    "offlineGracePeriod": 30
  }
}