<resources>

    <!-- Command Bar Styles -->

    <!-- Base MaterialCardView style for command bar -->
    <style name="Widget.LearnApp.CommandBar" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Button style for command bar buttons (pause, close) -->
    <style name="Widget.LearnApp.CommandBar.Button" parent="Widget.Material3.Button.IconButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorOnSurface</item>
    </style>

    <!-- Text appearance for command bar status text -->
    <style name="TextAppearance.LearnApp.CommandBar.Status" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>

</resources>
