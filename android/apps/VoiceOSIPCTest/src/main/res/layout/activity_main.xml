<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VoiceOS IPC Test Client"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phase 3f: IPC Testing &amp; Verification"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âšª Not connected"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="#F0F0F0"
            android:layout_marginBottom="16dp" />

        <!-- Service Binding -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Binding"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnBind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bind Service"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnUnbind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unbind Service"
                android:enabled="false" />
        </LinearLayout>

        <!-- Service Status Tests -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Status Methods (3)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTestIsServiceReady"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: isServiceReady()"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnTestGetServiceStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: getServiceStatus()"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnTestGetAvailableCommands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: getAvailableCommands()"
            android:layout_marginBottom="16dp" />

        <!-- Command Execution Tests -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Command Execution (2)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTestExecuteCommand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: executeCommand()"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnTestExecuteAccessibilityAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: executeAccessibilityAction()"
            android:layout_marginBottom="16dp" />

        <!-- Voice Recognition Tests -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voice Recognition (2)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTestStartVoiceRecognition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: startVoiceRecognition()"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnTestStopVoiceRecognition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: stopVoiceRecognition()"
            android:layout_marginBottom="16dp" />

        <!-- App Learning Tests -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Learning (3)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTestLearnCurrentApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: learnCurrentApp()"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnTestGetLearnedApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: getLearnedApps()"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnTestGetCommandsForApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: getCommandsForApp()"
            android:layout_marginBottom="16dp" />

        <!-- Dynamic Command Tests -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dynamic Commands (1)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTestRegisterDynamicCommand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: registerDynamicCommand()"
            android:layout_marginBottom="16dp" />

        <!-- UI Scraping Tests -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UI Scraping (1)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTestScrapeCurrentScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: scrapeCurrentScreen()"
            android:layout_marginBottom="16dp" />

        <!-- Callback Tests -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Callbacks (2)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTestRegisterCallback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: registerCallback()"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnTestUnregisterCallback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: unregisterCallback()"
            android:layout_marginBottom="16dp" />

        <!-- Test Suite -->
        <Button
            android:id="@+id/btnRunAllTests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš€ RUN ALL TESTS (14 Methods)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#4CAF50" />

        <!-- Log Output -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Log"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnClearLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Log"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:id="@+id/logScroll"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#F5F5F5"
            android:padding="8dp">

            <TextView
                android:id="@+id/logText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textColor="#000000" />
        </ScrollView>

    </LinearLayout>
</ScrollView>
