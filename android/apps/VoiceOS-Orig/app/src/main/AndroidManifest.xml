<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="DiscouragedApi,LockedOrientationActivity">

    <!-- Permissions -->
    <!-- Accessibility Service Permission - NOT needed for apps that contain the service -->
    <!-- BIND_ACCESSIBILITY_SERVICE is only for the system to bind to our service -->

    <!-- Overlay Permission for floating UI -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Microphone for voice commands -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Storage permissions for speech recognition models -->
    <!-- Allows models to be deployed via ADB to shared folder (.voiceos) -->
    <!-- Falls back to internal storage if denied -->

    <!-- API 30+ (Android 11+): MANAGE_EXTERNAL_STORAGE for broad file access -->
    <!-- Required for accessing non-media files (.voiceos folder) in shared storage -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <!-- Legacy permissions for API 23-29 (Android 6-10) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"
        tools:ignore="ScopedStorage" />

    <!-- Internet for model downloads (optional) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Wake lock to keep service running -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Boot completed to start on boot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Vibration for feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Accessibility Service Permission -->
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"
        tools:ignore="ProtectedPermissions" />


    <!-- Settings Modification -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <!-- Audio Control -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- Network State (for app commands) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Foreground Service Permissions (for VoiceOnSentry) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Package Query (Android 11+) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:name=".VoiceOS"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="false"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Transparent"
        tools:replace="android:icon,android:theme,android:label"
        tools:targetApi="34">
        <!-- Main Activity - VOS4 Entry Point -->
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Settings Hub -->
        <activity
            android:name=".ui.activities.SettingsActivity"
            android:exported="true"
            android:label="VoiceOS Settings"
            android:theme="@style/AppTheme.Transparent" />

        <!-- Onboarding Wizard -->
        <activity
            android:name=".ui.activities.OnboardingActivity"
            android:exported="true"
            android:label="VoiceOS Setup Wizard"
            android:theme="@style/AppTheme.Transparent" />

        <!-- Accessibility Setup -->
        <activity
            android:name=".ui.activities.AccessibilitySetupActivity"
            android:exported="true"
            android:label="VoiceOS Accessibility Setup"
            android:theme="@style/AppTheme.Transparent" />

        <!-- Module Configuration -->
        <activity
            android:name=".ui.activities.ModuleConfigActivity"
            android:exported="true"
            android:label="VoiceOS Module Configuration"
            android:theme="@style/AppTheme.Transparent" />

        <!-- Voice Training -->
        <activity
            android:name=".ui.activities.VoiceTrainingActivity"
            android:exported="true"
            android:label="VoiceOS Voice Training"
            android:theme="@style/AppTheme.Transparent" />

        <!-- System Diagnostics -->
        <activity
            android:name=".ui.activities.DiagnosticsActivity"
            android:exported="true"
            android:label="VoiceOS Diagnostics"
            android:theme="@style/AppTheme.Transparent" />

        <!-- Help Center -->
        <activity
            android:name=".ui.activities.HelpActivity"
            android:exported="true"
            android:label="VoiceOS Help"
            android:theme="@style/AppTheme.Transparent" />

        <!-- VoiceOSService is declared in VoiceAccessibility module manifest -->

        <!-- Main Activity (App Launcher) -->
        <activity
            android:name="com.augmentalis.voiceoscore.accessibility.ui.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.VoiceAccessibility"/>

        <activity
            android:name="com.augmentalis.voiceoscore.accessibility.ui.AccessibilitySettings"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.VoiceAccessibility"/>

        <!-- VoiceOS Service (Main Accessibility Service) -->
        <service
            android:name="com.augmentalis.voiceoscore.accessibility.VoiceOSService"
            android:description="@string/accessibility_service_description"
            android:exported="true"
            android:label="@string/accessibility_service_label"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <!-- Service configuration -->
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- VoiceOnSentry (Lightweight Foreground Service for Microphone) -->
        <service
            android:name="com.augmentalis.voiceoscore.accessibility.VoiceOnSentry"
            android:description="@string/microphone_service_description"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone"
            android:label="VoiceOS Microphone Service"
            android:stopWithTask="true" />

        <!-- VoiceKeyboard Input Method Service -->
        <!-- Service must be declared in main app manifest, not in library module -->
        <service
            android:name="com.augmentalis.voicekeyboard.service.VoiceKeyboardService"
            android:exported="true"
            android:label="@string/voice_keyboard_name"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/voice_keyboard_method" />
        </service>

        <!-- VoiceKeyboard Settings Activity -->
        <activity
            android:name="com.augmentalis.voicekeyboard.preferences.KeyboardSettingsActivity"
            android:exported="false"
            android:label="@string/voice_keyboard_settings"
            android:theme="@style/AppTheme.Settings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <!-- VoiceKeyboard Broadcast Receivers -->
        <receiver
            android:name="com.augmentalis.voicekeyboard.service.KeyboardBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.augmentalis.action.voice_key_code" />
                <action android:name="com.augmentalis.action.voice_key_command" />
                <action android:name="com.augmentalis.action.close" />
                <action android:name="com.augmentalis.action.switch_keyboard" />
                <action android:name="com.augmentalis.action.open_keyboard" />
                <action android:name="com.augmentalis.action.free_speech" />
                <action android:name="com.augmentalis.action.launch_dictation" />
            </intent-filter>
        </receiver>

    </application>

</manifest>

    <!-- End of File -->
