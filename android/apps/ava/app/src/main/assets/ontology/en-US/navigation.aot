      ]
    },
    "maps": {
      "apps": [
        {
          "package": "com.google.android.apps.maps",
          "name": "Google Maps",
          "actions": ["SEARCH_PLACES", "SHOW_TRAFFIC", "SAVE_PLACE"]
        }
      ]
    }
  }
}
