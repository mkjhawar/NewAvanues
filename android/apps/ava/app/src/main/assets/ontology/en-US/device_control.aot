  "ontology": [
    {
      "id": "control_lights",
      "canonical_form": "adjust_lighting",
      "description": "User wants to control lights - turn on, off, dim, or change color",
      "synonyms": [
        "turn on lights",
        "turn off lights",
        "lights on",
        "lights off",
        "dim the lights",
        "brighten lights",
        "switch on light",
        "switch off light",
        "turn on the lamp",
        "turn off the lamp"
      ],
      "action_type": "single_step",
      "action_sequence": [
        {
          "step": 1,
          "action": "CONTROL_DEVICE",
          "device_type": "light",
          "extract_entities": ["state", "brightness", "color", "location"]
        }
      ],
      "required_capabilities": ["smart_home"],
      "entity_schema": {
        "state": {
          "type": "ENUM",
          "values": ["on", "off"],
          "patterns": ["turn {state}", "{state} the lights"],
          "optional": false
        },
        "brightness": {
          "type": "PERCENTAGE",
          "patterns": ["to {brightness}", "at {brightness}", "dim to {brightness}"],
          "optional": true
        },
        "location": {
          "type": "LOCATION",
          "patterns": ["in the {location}", "{location} lights"],
          "optional": true
        }
      },
      "priority": 1,
      "tags": ["lights", "smart_home", "control", "automation"]
    },
