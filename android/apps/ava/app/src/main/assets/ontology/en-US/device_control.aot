      "id": "set_alarm",
      "canonical_form": "create_alarm",
      "description": "User wants to set an alarm for a specific time",
      "synonyms": [
        "set alarm",
        "set an alarm",
        "wake me up",
        "alarm for",
        "set alarm for",
        "create alarm",
        "add alarm",
        "remind me to wake up"
      ],
      "action_type": "multi_step",
      "action_sequence": [
        {
          "step": 1,
          "action": "OPEN_APP",
