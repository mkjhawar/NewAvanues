  "ontology": [
    {
      "id": "create_reminder",
      "canonical_form": "set_reminder",
      "description": "User wants to create a reminder for a specific time or task",
      "synonyms": [
        "remind me",
        "set reminder",
        "create reminder",
        "add reminder",
        "reminder to",
        "remind me to",
        "don't let me forget",
        "remember to"
      ],
      "action_type": "multi_step",
      "action_sequence": [
        {
          "step": 1,
          "action": "OPEN_APP",
          "capability_required": "reminders"
        },
        {
          "step": 2,
          "action": "CREATE_REMINDER",
          "extract_entities": ["task", "time", "location"]
        }
      ],
      "required_capabilities": ["reminders"],
      "entity_schema": {
        "task": {
          "type": "TEXT",
          "patterns": ["remind me to {task}", "reminder to {task}", "{task}"],
          "optional": false
        },
        "time": {
          "type": "DATETIME",
          "patterns": ["at {time}", "on {time}", "in {time}"],
          "optional": true
        },
        "location": {
          "type": "LOCATION",
          "patterns": ["when I get to {location}", "at {location}"],
          "optional": true
        }
      },
      "priority": 1,
      "tags": ["reminder", "task", "productivity", "schedule"]
    },
    {
      "id": "create_calendar_event",
      "canonical_form": "schedule_event",
      "description": "User wants to add an event to their calendar",
      "synonyms": [
        "add to calendar",
        "create event",
