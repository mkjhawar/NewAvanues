        "time": {
          "type": "TIME",
          "patterns": ["at {time}"],
          "optional": true
        },
        "location": {
          "type": "LOCATION",
          "patterns": ["at {location}", "in {location}"],
          "optional": true
        },
        "attendees": {
          "type": "PERSON_LIST",
          "patterns": ["with {attendees}", "invite {attendees}"],
          "optional": true
