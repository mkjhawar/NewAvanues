        {
          "step": 1,
          "action": "OPEN_APP",
          "capability_required": "calendar"
        },
        {
          "step": 2,
          "action": "CREATE_EVENT",
          "extract_entities": ["title", "date", "time", "duration", "location", "attendees"]
