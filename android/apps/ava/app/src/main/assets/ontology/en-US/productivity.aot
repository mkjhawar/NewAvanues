      "synonyms": [
        "add to do",
        "add task",
        "create task",
        "add to list",
        "todo",
        "new task",
        "add to my list",
        "I need to"
      ],
      "action_type": "multi_step",
      "action_sequence": [
        {
          "step": 1,
          "action": "OPEN_APP",
