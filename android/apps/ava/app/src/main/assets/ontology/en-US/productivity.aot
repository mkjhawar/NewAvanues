          "type": "DATE",
          "patterns": ["by {due_date}", "due {due_date}"],
          "optional": true
        },
        "priority": {
          "type": "ENUM",
          "values": ["high", "medium", "low"],
          "patterns": ["{priority} priority"],
          "optional": true
        },
        "list": {
          "type": "TEXT",
          "patterns": ["to {list} list", "in {list}"],
          "optional": true
        }
      },
      "priority": 1,
      "tags": ["todo", "task", "list", "productivity"]
    },
