<?xml version="1.0" encoding="utf-8"?>
<!-- AVA AI Launcher Icon Foreground -->
<!-- Purple gradient "A" with microphone wave accent -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Safe zone is 66x66dp centered (21dp margin on all sides) -->

    <!-- Letter "A" shape with purple gradient -->
    <group
        android:translateX="54"
        android:translateY="54">

        <!-- Left leg of A -->
        <path
            android:fillColor="#6B4EFF"
            android:pathData="M-12,-18 L-6,18 L-12,18 L-18,-18 Z"/>

        <!-- Right leg of A -->
        <path
            android:fillColor="#8B6FFF"
            android:pathData="M12,-18 L18,18 L12,18 L6,-18 Z"/>

        <!-- Crossbar of A -->
        <path
            android:fillColor="#7B5FFF"
            android:pathData="M-10,0 L10,0 L10,4 L-10,4 Z"/>

        <!-- Microwave accent (small wave on top) -->
        <path
            android:fillColor="#FFFFFF"
            android:fillAlpha="0.8"
            android:pathData="M-2,-22 Q0,-24,2,-22 Q4,-20,6,-22 L6,-20 Q4,-18,2,-20 Q0,-22,-2,-20 Z"/>
    </group>
</vector>
