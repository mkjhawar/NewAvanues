#!/bin/bash

# VOS4 Pre-commit Hook - Mandatory Test Validation
# 
# Copyright (C) Manoj Jhawar/Aman Jhawar, Intelligent Devices LLC
# Created: 2025-01-28
# 
# This hook ensures all code changes have corresponding tests

set -e

echo "ðŸ” VOS4 Pre-commit Test Validation Starting..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Configuration
MIN_COVERAGE=85
REQUIRED_TEST_RATIO=0.8 # 80% of changed files must have tests

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR)

# Separate Kotlin source files and test files
SOURCE_FILES=""
TEST_FILES=""
NEW_FILES=""
MODIFIED_FILES=""

for file in $STAGED_FILES; do
    if [[ $file == *.kt ]]; then
        if [[ $file == *Test.kt ]] || [[ $file == *Spec.kt ]] || [[ $file == */test/* ]] || [[ $file == */androidTest/* ]]; then
            TEST_FILES="$TEST_FILES $file"
        elif [[ $file == */src/main/* ]]; then
            SOURCE_FILES="$SOURCE_FILES $file"
            
            # Check if file is new or modified
            if git diff --cached --name-status | grep "^A.*$file" > /dev/null; then
                NEW_FILES="$NEW_FILES $file"
            else
                MODIFIED_FILES="$MODIFIED_FILES $file"
            fi
        fi
    fi
done

# Function to find test file for a source file
find_test_file() {
    local source_file=$1
    local base_name=$(basename "$source_file" .kt)
    local dir_path=$(dirname "$source_file")
    
    # Convert src/main path to test path
    local test_dir=${dir_path/src\/main/src\/test}
    local android_test_dir=${dir_path/src\/main/src\/androidTest}
    
    # Possible test file locations
    local test_file="${test_dir}/${base_name}Test.kt"
    local android_test_file="${android_test_dir}/${base_name}Test.kt"
    local spec_file="${test_dir}/${base_name}Spec.kt"
    
    if [[ -f "$test_file" ]]; then
        echo "$test_file"
    elif [[ -f "$android_test_file" ]]; then
        echo "$android_test_file"
    elif [[ -f "$spec_file" ]]; then
        echo "$spec_file"
    else
        echo ""
    fi
}

# Check for missing tests
MISSING_TESTS=""
FILES_WITHOUT_TESTS=0
TOTAL_SOURCE_FILES=0

echo -e "${YELLOW}Checking test coverage for changed files...${NC}"

for source_file in $SOURCE_FILES; do
    TOTAL_SOURCE_FILES=$((TOTAL_SOURCE_FILES + 1))
    test_file=$(find_test_file "$source_file")
    
    if [[ -z "$test_file" ]]; then
        MISSING_TESTS="$MISSING_TESTS $source_file"
        FILES_WITHOUT_TESTS=$((FILES_WITHOUT_TESTS + 1))
        echo -e "${RED}âœ—${NC} No test found for: $source_file"
    else
        # Check if test file is also being committed
        if echo "$TEST_FILES" | grep -q "$test_file"; then
            echo -e "${GREEN}âœ“${NC} Test updated for: $source_file"
        else
            echo -e "${YELLOW}âš ${NC} Test exists but not updated for: $source_file"
            echo "  Test file: $test_file"
            
            # For modified files, require test updates
            if echo "$MODIFIED_FILES" | grep -q "$source_file"; then
                echo -e "${RED}  ERROR: Modified source file requires test update!${NC}"
                MISSING_TESTS="$MISSING_TESTS $source_file"
                FILES_WITHOUT_TESTS=$((FILES_WITHOUT_TESTS + 1))
            fi
        fi
    fi
done

# Check test coverage ratio
if [[ $TOTAL_SOURCE_FILES -gt 0 ]]; then
    COVERAGE_RATIO=$(echo "scale=2; ($TOTAL_SOURCE_FILES - $FILES_WITHOUT_TESTS) / $TOTAL_SOURCE_FILES" | bc)
    COVERAGE_PERCENT=$(echo "scale=0; $COVERAGE_RATIO * 100" | bc)
    
    echo ""
    echo -e "Test Coverage: ${COVERAGE_PERCENT}% (${TOTAL_SOURCE_FILES} files, ${FILES_WITHOUT_TESTS} without tests)"
    
    if (( $(echo "$COVERAGE_RATIO < $REQUIRED_TEST_RATIO" | bc -l) )); then
        echo -e "${RED}âœ— Test coverage below required threshold (${REQUIRED_TEST_RATIO}%)${NC}"
        echo ""
        echo "Files missing tests:"
        for file in $MISSING_TESTS; do
            echo "  - $file"
        done
        echo ""
        echo "To fix this:"
        echo "1. Create test files for new source files"
        echo "2. Update test files for modified source files"
        echo "3. Use: ./scripts/generate-test.sh <source-file> to auto-generate test templates"
        echo ""
        echo "To bypass (NOT RECOMMENDED): git commit --no-verify"
        exit 1
    fi
fi

# Run test verification for new files
if [[ -n "$NEW_FILES" ]]; then
    echo ""
    echo -e "${YELLOW}Validating new files have proper test structure...${NC}"
    
    for new_file in $NEW_FILES; do
        # Check if file has testable content (not just data classes or interfaces)
        if grep -E "(class|object).*\{" "$new_file" | grep -v -E "(data class|interface|sealed)" > /dev/null; then
            test_file=$(find_test_file "$new_file")
            
            if [[ -z "$test_file" ]]; then
                echo -e "${RED}âœ—${NC} New file requires tests: $new_file"
                echo "  Run: ./scripts/generate-test.sh $new_file"
                exit 1
            fi
        fi
    done
fi

# Check test quality for test files
if [[ -n "$TEST_FILES" ]]; then
    echo ""
    echo -e "${YELLOW}Validating test quality...${NC}"
    
    for test_file in $TEST_FILES; do
        # Check for minimum test requirements
        TEST_COUNT=$(grep -c "@Test" "$test_file" || true)
        MOCK_COUNT=$(grep -c "@Mock" "$test_file" || true)
        ASSERT_COUNT=$(grep -cE "assert|verify" "$test_file" || true)
        
        if [[ $TEST_COUNT -lt 1 ]]; then
            echo -e "${RED}âœ—${NC} Test file has no @Test annotations: $test_file"
            exit 1
        fi
        
        if [[ $ASSERT_COUNT -lt $TEST_COUNT ]]; then
            echo -e "${YELLOW}âš ${NC} Test file may have tests without assertions: $test_file"
        fi
        
        echo -e "${GREEN}âœ“${NC} Test quality check passed: $test_file"
        echo "  Tests: $TEST_COUNT, Mocks: $MOCK_COUNT, Assertions: $ASSERT_COUNT"
    done
fi

# Run quick test compilation check
echo ""
echo -e "${YELLOW}Running test compilation check...${NC}"

# Only compile test files that were changed
if [[ -n "$TEST_FILES" ]]; then
    for test_file in $TEST_FILES; do
        # Determine module from path
        MODULE=$(echo "$test_file" | sed -E 's|^([^/]+/[^/]+).*|\1|')
        
        if [[ -d "$MODULE" ]]; then
            echo "  Compiling tests in: $MODULE"
            if ./gradlew ":${MODULE//\//:}:compileTestKotlin" --quiet 2>&1 | grep -E "(error|ERROR)"; then
                echo -e "${RED}âœ— Test compilation failed for: $test_file${NC}"
                exit 1
            fi
        fi
    done
    echo -e "${GREEN}âœ“ All tests compile successfully${NC}"
fi

echo ""
echo -e "${GREEN}âœ… Pre-commit test validation passed!${NC}"
exit 0