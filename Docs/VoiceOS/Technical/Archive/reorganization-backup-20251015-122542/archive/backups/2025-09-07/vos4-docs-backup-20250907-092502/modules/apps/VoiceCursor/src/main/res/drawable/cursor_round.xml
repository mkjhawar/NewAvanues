<?xml version="1.0" encoding="utf-8"?>
<!-- cursor_round.xml - ARVision themed round cursor -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="48dp"
    android:height="48dp"
    android:viewportWidth="48"
    android:viewportHeight="48">
    
    <!-- Outer glass ring with ARVision glass effect -->
    <group>
        <path
            android:pathData="M24,24m-22,0a22,22 0,1 1,44 0a22,22 0,1 1,-44 0"
            android:fillColor="#1A007AFF"
            android:strokeColor="#4D007AFF"
            android:strokeWidth="1"/>
        
        <!-- Inner highlight ring -->
        <path
            android:pathData="M24,24m-18,0a18,18 0,1 1,36 0a18,18 0,1 1,-36 0"
            android:fillColor="#33007AFF"
            android:strokeColor="#80FFFFFF"
            android:strokeWidth="0.5"/>
        
        <!-- Center dot -->
        <path
            android:pathData="M24,24m-3,0a3,3 0,1 1,6 0a3,3 0,1 1,-6 0"
            android:fillColor="#FF007AFF"/>
        
        <!-- Crosshair for precision -->
        <group android:scaleX="0.8" android:scaleY="0.8" android:pivotX="24" android:pivotY="24">
            <!-- Horizontal line -->
            <path
                android:pathData="M8,24 L40,24"
                android:strokeColor="#80FFFFFF"
                android:strokeWidth="1"
                android:strokeLineCap="round"/>
            
            <!-- Vertical line -->
            <path
                android:pathData="M24,8 L24,40"
                android:strokeColor="#80FFFFFF"
                android:strokeWidth="1"
                android:strokeLineCap="round"/>
        </group>
        
        <!-- Glass reflection highlight -->
        <path
            android:pathData="M16,16 Q24,12 32,16 Q28,20 24,18 Q20,20 16,16"
            android:fillColor="#40FFFFFF"/>
    </group>
</vector>