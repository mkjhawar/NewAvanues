<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <!-- Transparent activity theme for overlay -->
    <style name="AppTheme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <!-- Settings theme -->
    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
<!--        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>-->
    </style>
    
    <!-- Overlay button style -->
    <style name="OverlayButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/overlay_button</item>
        <item name="android:elevation">6dp</item>
    </style>
</resources>