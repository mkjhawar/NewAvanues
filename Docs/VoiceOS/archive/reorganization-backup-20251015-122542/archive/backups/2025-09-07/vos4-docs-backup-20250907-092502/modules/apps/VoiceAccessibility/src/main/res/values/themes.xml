<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- VoiceAccessibility Dark Theme -->
    <style name="Theme.VoiceAccessibility" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary colors (AppCompat compatible) -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorPrimaryDark">@color/md_theme_primary_container</item>
        <item name="colorAccent">@color/md_theme_secondary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Window properties -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        
        <!-- Enable edge-to-edge display -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
        
        <!-- Activity transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    
    <!-- Theme for launcher icon -->
    <style name="Theme.VoiceAccessibility.Launcher">
        <item name="android:windowBackground">@color/md_theme_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
</resources>