<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.augmentalis.speechrecognition">

    <!-- Permissions required for speech recognition -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Optional: For wake lock during long recognition sessions -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Optional: For vibration feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Features -->
    <uses-feature 
        android:name="android.hardware.microphone" 
        android:required="true" />
        
    <application>
        <!-- Library module - no activities or services declared here -->
        <!-- These will be declared in the app module that uses this library -->
        
        <!-- File provider for model downloads if needed -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.speechrecognition.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>